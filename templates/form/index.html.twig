{% extends 'base.html.twig' %}

{% block title %}Form Index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Form Index</h1>

    <div class="card shadow-lg p-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for form in forms %}
                <tr>
                    <td>{{ form.id }}</td>
                    <td>{{ form.title }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_form_show', {'id': form.id}) }}" class="btn btn-sm btn-info">Show</a>
                        <a href="{{ path('app_form_edit', {'id': form.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('form_create') }}" class="btn btn-success">Create New</a>
    </div>
</div>
{% endblock %}
